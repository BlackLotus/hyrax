<!-- direct copy of sufia's app/views/file_sets/_media_display.html.erb  -->
<% if file_set.image? %>
  <%= link_to image_tag(download_path(file_set, datastream_id: 'thumbnail'),{class:"img-responsive", alt:"Download the full-sized image of #{file_set.title.first}"})+"Download the full-sized image", download_path(file_set), { target:"_new", title:"Download the full-sized image"}%>
<% elsif file_set.video? %>
  <video controls="controls" class="video-js vjs-default-skin" data-setup="{}" preload="auto">
    <source src="<%= download_path(file_set, datastream_id: 'webm') %>" type="video/webm" />
    <source src="<%= download_path(file_set, datastream_id: 'mp4') %>" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
<% elsif file_set.audio? %>
    <audio controls="controls" class="audiojs" preload="auto">
    <source src="<%= download_path(file_set, datastream_id: 'ogg') %>" type="audio/ogg" />
    <source src="<%= download_path(file_set, datastream_id: 'mp3') %>" type="audio/mpeg" />
    Your browser does not support the audio tag.
  </audio>
<% elsif file_set.pdf?%>
  <%= link_to image_tag(download_path(file_set, datastream_id: 'thumbnail'),{class:"img-responsive", alt:"Download the full-sized PDF of #{file_set.title.first}"})+"Download the full-sized PDF", download_path(file_set), { target:"_new", title:"Download the full-sized PDF"}%>
<% else %>
  <%= link_to image_tag("default.png", {alt:"No preview available", class:"img-responsive"}),  download_path(file_set), { target:"_new", title:"Download the document"} %>
<% end %>
