<% if curation_concern.image? %>
  <%= link_to image_tag(download_path(curation_concern, datastream_id: 'thumbnail'),{class:"img-responsive", alt:"Download the full-sized image of #{curation_concern}"})+"Download the full-sized image", download_path(curation_concern), { target:"_new", title:"Download the full-sized image"}%>
<% elsif curation_concern.video? %>
  <video controls="controls" class="video-js vjs-default-skin" data-setup="{}" preload="auto">
    <source src="<%= download_path(curation_concern, datastream_id: 'webm') %>" type="video/webm" />
    <source src="<%= download_path(curation_concern, datastream_id: 'mp4') %>" type="video/mp4" />
    Your browser does not support the video tag.
  </video>
<% elsif curation_concern.audio? %>
    <audio controls="controls" class="audiojs" preload="auto">
    <source src="<%= download_path(curation_concern, datastream_id: 'ogg') %>" type="audio/ogg" />
    <source src="<%= download_path(curation_concern, datastream_id: 'mp3') %>" type="audio/mpeg" />
    Your browser does not support the audio tag.
  </audio>
<% elsif curation_concern.pdf?%>
  <%= link_to image_tag(download_path(curation_concern, datastream_id: 'thumbnail'),{class:"img-responsive", alt:"Download the full-sized PDF of #{curation_concern}"})+"Download the full-sized PDF", download_path(curation_concern), { target:"_new", title:"Download the full-sized PDF"}%>
<% else %>
  <%= link_to image_tag("default.png", {alt:"No preview available", class:"img-responsive"}),  download_path(curation_concern), { target:"_new", title:"Download the document"} %>
<% end %>
