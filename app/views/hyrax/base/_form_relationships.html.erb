<% if Flipflop.assign_admin_set? %>
  <%= f.input :admin_set_id, as: :select,
      collection: Hyrax::AdminSetService.new(controller).select_options(:deposit),
      include_blank: true,
      input_html: { class: 'form-control' } %>
<% end %>

<%= render 'form_in_works', f: f %>
<%= render 'form_member_of_collections', f: f %>

<% if params[:id] %>
  <h3><%= t("hyrax.works.#{action_name}.in_this_work") %></h3>
  <%= render 'form_child_work_relationships', f: f %>

  <h3><%= t("hyrax.works.#{action_name}.in_other_works") %></h3>
  <%= render_edit_field_partial(:in_works_ids, f: f) %>
<% end %>
