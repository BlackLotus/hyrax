<% if Sufia.config.display_media_download_link %>
    <div>
      <h2 class="sr-only"><%= t('sufia.file_set.show.downloadable_content.heading') %></h2>
      <%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
      <%= link_to sufia.download_path(file_set),
                  data: { turbolinks: false },
                  target: :_blank,
                  class: "btn btn-default" do %>
          <%= t('sufia.file_set.show.downloadable_content.image_link') %>
      <% end %>
    </div>
<% else %>
    <div>
      <%= image_tag thumbnail_url(file_set),
                    class: "representative-media",
                    alt: "",
                    role: "presentation" %>
    </div>
<% end %>
